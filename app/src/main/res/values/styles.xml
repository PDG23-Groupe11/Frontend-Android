<resources>
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="colorPrimaryVariant">@color/orange_pressed</item>
        <item name="colorOnPrimary">@color/orange</item>
    </style>
    <style name="CustomGrayButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/grey_button_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/light_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>
